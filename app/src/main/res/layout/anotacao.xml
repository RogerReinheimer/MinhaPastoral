<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".MainAnotacao">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintFundo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/logo" />

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/fundo_azul_escuro"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anotação"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="335dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/fundo_azul_menosescuro"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="321dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="12dp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="Digite seu texto aqui..."
                            android:inputType="text|textMultiLine"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textColorHint="#ffffff"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSalvar"
                        android:layout_width="106dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/fundo_botao_azul_escuro"
                        android:paddingTop="2dp"
                        android:text="Salvar"
                        android:textAlignment="inherit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textColorLink="@color/azul_mais_escuro"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rodape"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnPagHome7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Início"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/btnMensagens7"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Bíblia"
            android:src="@drawable/biblia" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnFlutuante7"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Adicionar nova mensagem"
                android:elevation="8dp"
                android:src="@drawable/soma" />

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circulo_azul"
                android:elevation="6dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/btnMensagensSemana7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Cruz"
            android:src="@drawable/cruz_magra" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Mais"
            android:src="@drawable/pontos" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
