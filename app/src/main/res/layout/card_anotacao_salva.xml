<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/tv_cabecario_anotacao_salva"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#1E3A5F"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo_anotacao_salva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Anotação salva"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- CONTEÚDO BRANCO -->
        <TextView
            android:id="@+id/tv_conteudo_anotacao_salvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:text="texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, texto de exemplo, "
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2dp"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
