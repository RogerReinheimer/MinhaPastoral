<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Cabeçalho -->
        <LinearLayout
            android:id="@+id/tv_cabecario_anotacao_salva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E3A5F"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <!-- Agrupa título e estrela + botão dentro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Linha do título + estrela -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_titulo_anotacao_salva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anotação salva"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_estrela"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:contentDescription="estrela"/>
                </LinearLayout>

                <!-- Linha do botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_excluir"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Excluir"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2C4E78"
                        android:stateListAnimator="@null"
                        android:elevation="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Conteúdo escondido -->
        <TextView
            android:id="@+id/tv_conteudo_anotacao_salvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:text="texto de exemplo, texto de exemplo, texto de exemplo..."
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2dp"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
